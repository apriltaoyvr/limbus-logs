generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model abnormality {
  name    String     @id
  id      String
  image   String?
  risk    risk_level @default(ZAYIN)
  chapter Int?
  desc    String?
  log     log[]
}

model sinner {
  id       String    @id
  name     String
  comments comment[]
  logs     log[]
}

model log {
  id                String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  abnormality       abnormality? @relation(fields: [abnormality_name], references: [name], onDelete: NoAction, onUpdate: NoAction)
  abnormality_name  String?
  abnormality_id    String?
  observation_level Int          @default(0)
  text              String
  sinner            sinner       @relation(fields: [sinner_id], references: [id], onUpdate: NoAction)
  sinner_id         String
  comments          comment[]
}

model comment {
  id        String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  text      String
  sinner    sinner @relation(fields: [sinner_id], references: [id], onUpdate: NoAction)
  sinner_id String
  log       log    @relation(fields: [log_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  log_id    String @db.Uuid
  order     Int?   @default(0)
}

enum risk_level {
  ZAYIN
  TETH
  HE
  WAW
  ALEPH
}
